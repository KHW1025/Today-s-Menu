<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>프로젝트 명</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/public/css/my_reset.css" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <script src="/public/js/index_tab.js" defer></script>
    <link rel="stylesheet" href="/public/css/common.css" />
  </head>

  <body>
    <div class="paper_bg mw3">
      <div class="clip1_img">
        <img src="/public/img/clip1.png" alt="클립1" />
      </div>

      <header class="hd mw2">
        <div class="logo_img">
          <img src="/public/img/logo.png" alt="로고" />
        </div>

        <div class="title_box">
          <div class="fork_img">
            <img src="/public/img/fork.png" alt="포크" />
          </div>
          <a href="/" class="title_detail">
            <span>Today's MENU</span>
            <span>in hyun_sikdang</span>
          </a>
          <div class="spoon_knife_img">
            <img src="/public/img/spoon_knife.png" alt="수저" />
          </div>
        </div>

        <div class="icons">
          <li class="dice_icon">
            <a href="#"><i class="fa-solid fa-dice"></i></a>
          </li>
          <li class="instagram_icon">
            <a
              href="https://www.secure.instagram.com/hyun_sikdang/"
              target="_blank"
              ><i class="fa-brands fa-instagram"></i
            ></a>
          </li>
          <li class="naver_icon">
            <a href="https://in.naver.com/hyunsikdang" target="_blank">N</a>
          </li>
        </div>
      </header>

      <section class="list_sec mw1">
        <ul class="category_con">
          <li class="ct_btn on" data-name="전체"><span>전체</span></li>
          <li class="ct_btn" data-name="한식"><span>한식</span></li>
          <li class="ct_btn" data-name="양식"><span>양식</span></li>
          <li class="ct_btn" data-name="일식"><span>일식</span></li>
          <li class="ct_btn" data-name="중식"><span>중식</span></li>
          <li class="ct_btn" data-name="기타"><span>기타</span></li>
        </ul>

        <div class="list_detail_con">
          <% for ( list in post ){ %>
          <div class="food_img">
            <img
              src="<%= post[list].사진URL %>"
              alt="<%= post[list].메뉴명 %>"
            />
            <div class="back">
              <span class="menu_name"><%= post[list].메뉴명 %></span>
            </div>
            <span class="category"><%= post[list].카테고리 %></span>
            <span class="comment"><%= post[list].코멘트 %></span>
            <span class="recipe"><%= post[list].레시피 %></span>
            <button class="delete" data-id=" <%= post[list]._id %>">
              삭제하기
            </button>
          </div>
          <% } %>
        </div>

        <div class="add_button">
          <a href="/write">추가하기</a>
        </div>
      </section>

      <div class="bottom_img mw3">
        <img src="/public/img/bottom_img.png" alt="하단이미지" />
      </div>
    </div>

    <div class="detail_modal">
      <div class="detail_modal_box">
        <div class="detail_inner">
          <!-- 모달 내용 들어올 곳 -->
        </div>
        <div class="button_con">
          <button class="edit">수정하기</button>
          <div class="delete_btn">
            <!-- 삭제버튼 들어올 곳 -->
          </div>
          <button class="detail_close">창닫기</button>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script>
      $(".delete").click(function (e) {
        console.log("클릭함");
        let num = e.target.dataset.id;
        $.ajax({ method: "DELETE", url: "/delete", data: { _id: num } })
          .done(function (result) {
            document.querySelector("div.food_img").fadeOut();
            // $(e.target).parent("li").fadeOut();
          })
          .fail(function (xhr, textStatus, errorThrown) {
            console.log(xhr, textStatus, errorThrown);
          });
      });
    </script>
  </body>
</html>
